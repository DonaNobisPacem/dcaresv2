<%= image_tag @project_image.image_url(:thumbnail) %>
<%= simple_form_for( [@project_image.project, @project_image] ) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :image, as: :file, multiple: true %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :method => :patch %>
  </div>
<% end %>
