<div class="panel panel-success">
	<div class="panel-heading text-center">
		<h3><%= @project_phase.phase_name %></h3>
		<b>Project Phase of <%= link_to @project_phase.project.project_name, project_path(@project_phase.project) %></b>
	</div>
	<div class="panel-body">
		<p id="notice"><%= notice %></p>
		<div class="panel panel-info">
			<div class="panel-heading">
				<b><%= icon('info-circle')%>  General Information</b>
			</div>
			<div class="panel-body">

				<div class="row">
					<div class="col-xs-6">
						<b>Description:</b><br>
						<div class="well well-sm" style="overflow:auto"><%= simple_format(@project_phase.description) %></div>
					</div>
					<div class="col-xs-6">
						<b>Expected Outcome:</b><br>
						<div class="well well-sm" style="overflow:auto"><%= simple_format(@project_phase.expected_outcome) %></div>
					</div>
				</div>

				<div class="row">
					<div class="col-xs-12">
						<div class="progress">
						    <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="<%= @project_phase.percent_accomplishment %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @project_phase.percent_accomplishment %>%">
						        <span><%= @project_phase.percent_accomplishment %>% Complete since <%= @project_phase.percent_accomplishment_by.strftime("%d %B %Y") if @project_phase.percent_accomplishment_by %></span>
						    </div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="panel panel-info">
			<div class="panel-heading">
				<b><%= icon('suitcase')%>  Bidding Details</b>
			</div>
			<div class="panel-body">
				<div class="col-xs-12">
					<b>Contractor/: </b><%= @project_phase.bidding_contractor %><br>
					<b>Number of Biddings: </b><%= @project_phase.bidding_number %><br>
					<b>Date of Award: </b><%= @project_phase.bidding_award.strftime("%d %B %Y") if @project_phase.bidding_award %><br>
					<b>Date of Notice to Proceed: </b><%= @project_phase.bidding_proceed.strftime("%d %B %Y") if @project_phase.bidding_proceed %>
				</div>
				<div class="col-xs-12">
					<b>Remarks:</b><br>
					<% unless @project_phase.bidding_remarks.blank? %>
						<div class="well well-sm" style="overflow:auto"><%= simple_format(@project_phase.bidding_remarks) %></div>
					<% end %>
				</div>
			</div>
		</div>
		 
		 <div class="panel panel-info">
			<div class="panel-heading">
				<b><%= icon('money')%>  Financial Details</b>
			</div>
			<div class="panel-body">
				<div class="col-xs-12">
					 <b>Source of funds: </b>
					 <% @project_phase.fund_sources.each do |source| %>
					 	<li><%= source.source_name %></li>
					 <% end %>
					 <li><%= @project_phase.financial_source %></li>
					 <b>Budget (PhP): </b><%= number_with_precision( @project_phase.financial_budget, precision: 2, delimiter: ',' ) %><br>
					 <b>Contract Price (PhP): </b><%= number_with_precision( @project_phase.financial_contract_price, precision: 2, delimiter: ',' ) %><br>
					 <b>Actual Cost (PhP): </b><%= number_with_precision( @project_phase.financial_actual_cost, precision: 2, delimiter: ',' ) %>
				</div>
				<div class="col-xs-12">
					<b>Remarks:</b><br>
					<% unless @project_phase.financial_remarks.blank? %>
						<div class="well well-sm" style="overflow:auto"><%= simple_format(@project_phase.financial_remarks) %></div>
					<% end %>
				</div>
			</div>
		</div>

		<div class="panel panel-info">
			<div class="panel-heading">
				<b><%= icon('clock-o')%>  Timeline</b>
			</div>
			<div class="panel-body">
				<div class="col-xs-12">
					 <b>Target Start Date: </b><%= @project_phase.timeline_target_start.strftime("%d %B %Y") if @project_phase.timeline_target_start %><br>
					 <b>Target Completion Date: </b><%= @project_phase.timeline_target_end.strftime("%d %B %Y") if @project_phase.timeline_target_end %><br>
					 <b>Actual Start Date: </b><%= @project_phase.timeline_actual_start.strftime("%d %B %Y") if @project_phase.timeline_actual_start %><br>
					 <b>Actual Completion Date: </b><%= @project_phase.timeline_actual_end.strftime("%d %B %Y") if @project_phase.timeline_actual_end %>
				</div>
				<div class="col-xs-12">
					<b>Remarks:</b><br>
					<% unless @project_phase.timeline_remarks.blank? %>
						<div class="well well-sm" style="overflow:auto"><%= simple_format(@project_phase.timeline_remarks) %></div>
					<% end %>
				</div>
			</div>
		</div>

		<div class="panel panel-info">
			<div class="panel-heading">
				<b><%= icon('quote-right')%>  General Remarks</b>
			</div>
			<div class="panel-body">
				<div class="row">
					<div class="col-xs-12">
						<%= simple_format(@project_phase.remarks) %>
					</div>
				</div>
			</div>
		</div>

	 	<div class="pull-right">
			<%= link_to 'Edit', edit_project_project_phase_path(@project_phase.project, @project_phase) %> |
			<%= link_to 'Destroy', project_project_phase_path(@project_phase.project, @project_phase), method: :delete, data: { confirm: 'Are you sure?' } %> |
			<%= link_to 'Back', project_path(@project_phase.project) %>
		</div>
 	</div>
 </div>

