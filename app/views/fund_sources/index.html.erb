<% if current_user.admin %>
<p id="notice"><%= notice %></p>
</br>
<h1><b>List of Fund Sources</b></h1>
<%= link_to '<i class="fa fa-plus"></i> New Fund Source'.html_safe, new_fund_source_path, :class => "pull-right" %>
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Source Name</th>
      <th>Classification</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @fund_sources.each do |source| %>
      <tr>
        <td><%= source.source_name %></td>
        <td><%= source.fund_source_classification %></td>
        <td style="text-align: right;">
           <%= link_to 'Edit', edit_fund_source_path(source) %> | <%= link_to 'Destroy', source, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
 <%= render 'shared/unauthorized' %>
<% end %>
