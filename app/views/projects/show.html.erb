<div class="panel panel-success">
	<div class="panel-heading text-center">
		<h3><%= @project.project_name %></h3>
		<b><%= @project.project_code %> - <%= link_to @university.university_name, @university %></b>
	</div>
	<div class="panel-body">
		<p id="notice"><%= notice %></p>

		<%= render 'shared/project_shared_panels', :project => @project %>

		<% if @project.has_components %>
			<div class="panel panel-info">
				<div class="panel-heading">
					<b><%= icon('tasks')%>  Project Components</b>
				</div>
				<div class="panel-body">
					<div class="col-xs-12">
						<div class="pull-right">
							<% if current_user.admin || !current_user.universities.where(:id => @project.university_id ).blank? %>
								<%= link_to '<i class="fa fa-plus"></i> Add new Project Component'.html_safe, new_project_project_component_path(@project) %> |
							<% end %>
							<%= link_to '<i class="fa fa-search"></i> View all Project Components'.html_safe, project_project_components_path(@project) %> 
						</div>
						<table class="table table-hover table-responsive">
						  <thead>
						    <tr>
						      <th>Component Name</th>
						      <th>Description</th>
						      <th></th>
						    </tr>
						  </thead>
						  <tbody>
						    <% @project_components.each do |component| %>
						      <tr>
						        <td style="text-align: left; word-wrap: break-word;min-width: 220px;max-width: 220px;white-space:normal;"><%= component.component_name %></td>
						        <td style="text-align: left; word-wrap: break-word;min-width: 220px;max-width: 220px;white-space:normal;"><%= component.description %></td>
						        <td style="text-align: right; word-wrap: break-word;min-width: 200px;max-width: 20	0px;white-space:normal;"><%= link_to "View details", project_project_component_path(@project, component), :class => "btn btn-small btn-info" %></td>    
						      </tr>
						    <% end %>
						  </tbody>
						</table>
						<div class="text-center">
						  <%= will_paginate @project_components, renderer: BootstrapPagination::Rails %>
						</div>
					</div>
				</div>
			</div>
		<% end %>

		<% if @project.has_phases %>
			<div class="panel panel-info">
				<div class="panel-heading">
					<b><%= icon('tasks')%>  Project Phases</b>
				</div>
				<div class="panel-body">
					<div class="col-xs-12">
						<div class="pull-right">
							<% if current_user.admin || !current_user.universities.where(:id => @project.university_id ).blank? %>
								<%= link_to '<i class="fa fa-plus"></i> Add new Project Phase'.html_safe, new_project_project_phase_path(@project) %> |
							<% end %>
							<%= link_to '<i class="fa fa-search"></i> View all Project Phases'.html_safe, project_project_phases_path(@project) %> 
						</div>
						<table class="table table-hover table-responsive">
						  <thead>
						    <tr>
						      <th>Phase Name</th>
						      <th>Description</th>
						      <th></th>
						    </tr>
						  </thead>
						  <tbody>
						    <% @project_phases.each do |phase| %>
						      <tr>
						        <td style="text-align: left; word-wrap: break-word;min-width: 220px;max-width: 220px;white-space:normal;"><%= phase.phase_name %></td>
						        <td style="text-align: left; word-wrap: break-word;min-width: 220px;max-width: 220px;white-space:normal;"><%= phase.description %></td>
						        <td style="text-align: right; word-wrap: break-word;min-width: 200px;max-width: 200px;white-space:normal;"><%= link_to "View details", project_project_phase_path(@project, phase), :class => "btn btn-small btn-info" %></td>    
						      </tr>
						    <% end %>
						  </tbody>
						</table>
						<div class="text-center">
						  <%= will_paginate @project_phases, renderer: BootstrapPagination::Rails %>
						</div>
					</div>
				</div>
			</div>
		<% end %>

		<div class="panel panel-info">
			<div class="panel-heading">
				<b><%= icon('quote-right')%>  General Remarks</b>
			</div>
			<div class="panel-body">
				<div class="row">
					<div class="col-xs-12">
						<%= simple_format(@project.remarks) %>
					</div>
				</div>
			</div>
		</div>

		<div class="panel panel-info">
			<div class="panel-heading">
				<b><%= icon('image')%>  Gallery</b>
			</div>
			<div class="panel-body">
				<div class="pull-right">
					<% if current_user.admin || !current_user.universities.where(:id => @project.university_id ).blank? %>
						<%= link_to '<i class="fa fa-plus"></i> Add new Project Image'.html_safe, edit_project_path(@project) %> |
					<% end %>
					<%= link_to '<i class="fa fa-search"></i> View all Project Images'.html_safe, project_project_images_path(@project) %> 
				</div>
				<div class="col-xs-12">
					<% @project_images.each_with_index do |image, index| %>
  						<% if index % 3 == 0 %>
  							<div class="row">
  							</div>
  						<% end %>
						<div class="col-xs-4">
							<%= link_to image_tag(image.image_url(:thumbnail)), project_project_image_path(@project, image) %><br>
  						</div>
					<% end %>
				</div>
				<%= will_paginate @project_images, renderer: BootstrapPagination::Rails, :class => "pull-right" %>
			</div>
		</div>
	 	<div class="pull-right">
	 		<% if current_user.admin || !current_user.universities.where(:id => @project.university_id ).blank? %>
				<%= link_to 'Edit', edit_project_path(@project) %> |
				<%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' } %> |
			<% end %>
			<%= link_to 'Back', "javascript:history.back()" %>
		</div>
 	</div>
 </div>
