<%= simple_form_for(@project, html: {multipart: true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

	<div class="panel panel-info">
		<div class="panel-heading">
			<b>General Information</b>
		</div>
		<div class="panel-body">

			<div class="col-xs-12">
				<%= f.label :university_id, "Project of:" %>
				<%= f.collection_select :university_id, University.all.order(:university_name), :id, :university_name, {prompt: "Select a CU"}, {class: "form-control", style: "margin-bottom: 10px"} %>
			</div>

		  	<div class="col-xs-6">
		  		<%= f.input :project_name, :label => "Project Name:" %>
		  	</div>
		  	<div class="col-xs-6">
			<%= f.input :project_code, :label => "Project Code:" %>
			</div>

			<div class="col-xs-6">
			<%= f.input :description, :label => "Description:", :input_html => {:rows => 5} %>
			</div>
			<div class="col-xs-6">
			<%= f.input :expected_outcome, :label => "Expected Outcome:", :input_html => {:rows => 5} %>
			</div>

			<div class="col-xs-6">
			<%= f.input :percent_accomplishment, :label => "Percent Accomplisment:" %>
			</div>
			<div class="col-xs-6">
			<%= f.input :percent_accomplishment_by, as: :date, :label => "Percent Accomplished By:", :start_year => Date.today.year, :end_year => 1900  %>
			</div>

			<div class="col-xs-12">
				<%= f.input :remarks, :label => "Remarks:", :input_html => {:rows => 10} %>
			</div>
		</div>
	</div>

	<div class="panel panel-info">
		<div class="panel-heading">
			<b>Bidding Details</b>
		</div>
		<div class="panel-body">
			<div class="col-xs-12">
				<%= f.input :bidding_contractor, :label => "Contractor:" %>
			</div>
			<div class="col-xs-4">
				<%= f.input :bidding_number, :label => "Number of Biddings:" %>
			</div>
			<div class="col-xs-4">
				<%= f.input :bidding_award, as: :date, :label => "Date of Award:", :start_year => Date.today.year, :end_year => 1900  %>
			</div>
			<div class="col-xs-4">
				<%= f.input :bidding_proceed, as: :date, :label => "Date to Proceed:", :start_year => Date.today.year, :end_year => 1900  %>
			</div>
		</div>
	</div>

	<div class="panel panel-info">
		<div class="panel-heading">
			<b>Financial Details</b>
		</div>
		<div class="panel-body">
			<div class="col-xs-12">
				<%= f.input :financial_source, :label => "Source of funding:" %>
			</div>
			<div class="col-xs-4">
				<%= f.input :financial_budget, :label => "Budget:" %>
			</div>
			<div class="col-xs-4">
				<%= f.input :financial_contract_price, :label => "Contract Price:" %>
			</div>
			<div class="col-xs-4">
				<%= f.input :financial_actual_cost, :label => "Actual Cost:" %>
			</div>
		</div>
	</div>

	<div class="panel panel-info">
		<div class="panel-heading">
			<b>Timeline</b>
		</div>
		<div class="panel-body">
			<div class="col-xs-6">
				<%= f.input :timeline_target_start, as: :date, :label => "Target Start Date:", :start_year => Date.today.year, :end_year => 1900  %>
			</div>
			<div class="col-xs-6">
				<%= f.input :timeline_target_end, as: :date, :label => "Target Completion Date:", :start_year => Date.today.year, :end_year => 1900  %>
			</div>
			<div class="col-xs-6">
				<%= f.input :timeline_actual_start, as: :date, :label => "Actual Start Date:", :start_year => Date.today.year, :end_year => 1900  %>
			</div>
			<div class="col-xs-6">
				<%= f.input :timeline_actual_end, as: :date, :label => "Actual Completion Date:", :start_year => Date.today.year, :end_year => 1900  %>
			</div>
		</div>
	</div>

	<div class="panel panel-info">
		<div class="panel-heading">
			<b>Gallery</b>
		</div>
		<div class="panel-body">
			<div class="col-xs-12">
				<b>Add Images: </b><br>
				<%= file_field_tag "project_images[]", type: :file, multiple: true %>
			</div>
		</div>
	</div>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
