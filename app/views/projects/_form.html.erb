<%= simple_form_for(@project, html: {multipart: true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

  	<div class="panel panel-info">
  		<div class="panel-heading">
  			<b>Project Status</b>
  		</div>
  		<div class="panel-body">
  			<div class="col-xs-6">
  				<%= f.input :status, :collection => ProjectStatus.all, :label_method => :description, :include_blank => false, :label => "Project Status" %>
  			</div>
  			<div class="col-xs-6">
  				<%= f.input :classification, :collection => ProjectClassification.all, :label_method => :description, :include_blank => true, :label => "Project Classification" %>
  			</div>

  			<div class="col-xs-4">
				<%= f.input :percent_accomplishment, :label => "Percent Accomplisment:" %>
			</div>
  			<div class="col-xs-4">
  				<%= f.input :completed_by, :label => "Completed By:", :start_year => Date.today.year, :end_year => 1900, :include_blank => true, :as => :date_picker, :placeholder => "DD/MM/YYYY" %>
  			</div>
			<div class="col-xs-4">
				<%= f.input :percent_accomplishment_by, :label => "Percent Accomplished By:", :start_year => Date.today.year, :end_year => 1900, :include_blank => true, :as => :date_picker, :placeholder => "DD/MM/YYYY" %>
			</div>
  		</div>
  	</div>

	<div class="panel panel-info">
		<div class="panel-heading">
			<b>General Information</b>
		</div>
		<div class="panel-body">

			<div class="col-xs-12">
				<% if current_user.admin %>
					<%= f.input :university_id, :collection => University.all.order(:university_name), :label_method => :university_name, :include_blank => false, :label => "Project of:" %>
				<% else %>
					<%= f.input :university_id, :collection => current_user.universities.order(:university_name), :label_method => :university_name, :include_blank => false, :label => "Project of:" %>
				<% end %>
			</div>

		  	<div class="col-xs-6">
		  		<%= f.input :project_name, :label => "Project Name:" %>
		  	</div>
		  	<div class="col-xs-6">
				<%= f.input :project_code, :label => "Project Code:" %>
			</div>

			<div class="col-xs-6">
				<%= f.input :description, :label => "Description:", :input_html => {:rows => 5} %>
			</div>
			<div class="col-xs-6">
				<%= f.input :expected_outcome, :label => "Expected Outcome:", :input_html => {:rows => 5} %>
			</div>

			<div class="col-xs-12">
				<%= f.input :end_user, :label => "End User/s:", :input_html => {:rows => 5} %>
			</div>

			<div class="col-xs-12">
				<%= f.input :remarks, :label => "Remarks:", :input_html => {:rows => 5} %>
			</div>
			
			<div class="col-xs-6">
				<%= f.input :has_components, :label => "Project has components" %>
			</div>
			<div class="col-xs-6">
				<%= f.input :has_phases, :label => "Project has phases" %>
			</div>
		</div>
	</div>

	<div class="panel panel-info">
		<div class="panel-heading">
			<b>Bidding Details</b>
		</div>
		<div class="panel-body">
			<div class="col-xs-12">
				<%= f.input :bidding_contractor, :label => "Contractor/s:", :input_html => {:rows => 3} %>
			</div>
			<div class="col-xs-4">
				<%= f.input :bidding_number, :label => "Number of Biddings:" %>
			</div>
			<div class="col-xs-4">
				<%= f.input :bidding_award, :label => "Date of Notice of Award:", :start_year => Date.today.year, :end_year => 1900, :include_blank => true, :as => :date_picker, :placeholder => "DD/MM/YYYY"  %>
			</div>
			<div class="col-xs-4">
				<%= f.input :bidding_proceed, :label => "Date to Proceed:", :start_year => Date.today.year, :end_year => 1900, :include_blank => true, :as => :date_picker, :placeholder => "DD/MM/YYYY"  %>
			</div>
			<div class="col-xs-12">
				<%= f.input :bidding_remarks, :label => "Remarks:", :input_html => {:rows => 5} %>
			</div>
		</div>
	</div>

	<div class="panel panel-info">
		<div class="panel-heading">
			<b>Financial Details</b>
		</div>
		<div class="panel-body">
			<div class="col-xs-12">
				<%= f.association :fund_sources, as: :select, collection: FundSource.all.order(:source_name), :label_method => :source_name, :input_html => {:size => 10}, :include_blank => true, :label => "Source/s of funds:" %>
				<%= f.input :financial_source, :label => "Other source/s (if applicable):" %>
			</div>
			<div class="col-xs-3">
				<%= f.input :financial_budget, :label => "Budget (PhP):" %>
			</div>
			<div class="col-xs-3">
				<%= f.input :financial_contract_price, :label => "Contract Price (PhP):" %>
			</div>
			<div class="col-xs-3">
				<%= f.input :financial_actual_cost, :label => "Actual Cost (PhP):" %>
			</div>
			<div class="col-xs-3">
				<%= f.input :financial_variation, :label => "Variation Order (PhP):" %>
			</div>
			<div class="col-xs-12">
				<%= f.input :financial_remarks, :label => "Remarks:", :input_html => {:rows => 5}, :placeholder => "Donors and Government Agencies names should also be listed here if applicable." %>
			</div>
		</div>
	</div>

	<div class="panel panel-info">
		<div class="panel-heading">
			<b>Timeline</b>
		</div>
		<div class="panel-body">
			<div class="col-xs-6">
				<%= f.input :timeline_target_start, :label => "Target Start Date:", :start_year => Date.today.year, :end_year => 1900, :include_blank => true, :as => :date_picker, :placeholder => "DD/MM/YYYY" %>
			</div>
			<div class="col-xs-6">
				<%= f.input :timeline_target_end, :label => "Target Completion Date:", :start_year => Date.today.year, :end_year => 1900, :include_blank => true, :as => :date_picker, :placeholder => "DD/MM/YYYY" %>
			</div>
			<div class="col-xs-6">
				<%= f.input :timeline_actual_start, :label => "Actual Start Date:", :start_year => Date.today.year, :end_year => 1900, :include_blank => true, :as => :date_picker, :placeholder => "DD/MM/YYYY" %>
			</div>
			<div class="col-xs-6">
				<%= f.input :timeline_actual_end, :label => "Actual Completion Date:", :start_year => Date.today.year, :end_year => 1900, :include_blank => true, :as => :date_picker, :placeholder => "DD/MM/YYYY" %>
			</div>	
			<div class="col-xs-6">
				<%= f.input :timeline_duration, :label => "Project Duration (in Calendar days):", :readonly => true %>
			</div>
			<div class="col-xs-6">
				<%= f.input :timeline_extension, :label => "Project Extension (in Calendar days):" %>
			</div>
			<div class="col-xs-12">
				<%= f.input :timeline_remarks, :label => "Remarks:", :input_html => {:rows => 5} %>
			</div>
		</div>
	</div>

	<div class="panel panel-info">
		<div class="panel-heading">
			<b>Gallery</b>
		</div>
		<div class="panel-body">
			<% if @project.project_images.count > 15 %>
				<b>This project has reached its image limit. Please delete some images if you want to upload more.</b>
			<% else %>
				<div class="col-xs-12">
					<b>Add Images (Maximum of 2MB per image): </b><br>
					<%= file_field_tag "project_images[]", type: :file, multiple: true %>
				</div>
			<% end %>
		</div>
	</div>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save Updates" %>
  </div>
<% end %>
