<p id="notice"><%= notice %></p>
<%= render 'shared/university_selector' %>
</br>
<h1><b>List of Universities</b></h1>
<%= link_to '<i class="fa fa-plus"></i> New University'.html_safe, new_university_path, :class => "pull-right" %>
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Code</th>
      <th>University Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @universities.each do |university| %>
      <tr>
        <td><%= university.university_code %></td>
        <td><%= university.university_name %></td>
        <td style="text-align: right;">
        <%= link_to 'Show', university %>
        <% if user_signed_in? %>
        <% if current_user.admin %>
           | <%= link_to 'Edit', edit_university_path(university) %> | <%= link_to 'Destroy', university, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>