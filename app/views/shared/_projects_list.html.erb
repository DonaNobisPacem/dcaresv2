<%= link_to 'New Project', new_project_path, :class => "btn btn-success pull-right" %>
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Project Code</th>
      <th>Project Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td style="text-align: left; word-wrap: break-word;min-width: 160px;max-width: 160px;white-space:normal;"><%= project.project_code %></td>
        <td style="text-align: left; word-wrap: break-word;min-width: 160px;max-width: 160px;white-space:normal;"><%= project.project_name %></td>
        <td style="text-align: left; word-wrap: break-word;min-width: 160px;max-width: 160px;white-space:normal;"><%= project.description %></td>
        <td style="text-align: right; word-wrap: break-word;min-width: 160px;max-width: 160px;white-space:normal;"><%= link_to "View details", project, :class => "btn btn-small btn-info" %></td>    
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center">
  <%= will_paginate @projects, renderer: BootstrapPagination::Rails %>
</div>
